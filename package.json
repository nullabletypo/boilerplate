{
  "name": "boilerplate",
  "description": "",
  "version": "0.0.1",
  "author": "nullabletypo",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "module": "es/index.js",
  "files": [
    "es",
    "dist",
    "README.md",
    "LICENCE"
  ],
  "homepage": "https://github.com/nullabletypo/boilerplate#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nullabletypo/boilerplate.git"
  },
  "bugs": {
    "url": "https://github.com/nullabletypo/boilerplate/issues"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-typescript": "^7.3.3",
    "@babel/register": "^7.4.0",
    "@types/node": "^11.13.0",
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "eslint-config-nullabletypo": "https://github.com/nullabletypo/eslint-config-nullabletypo",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "tsconfig-paths": "^3.8.0",
    "typescript": "^3.4.1"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript"
    ]
  },
  "ava": {
    "files": [
      "test/**/*test.{js,jsx,ts,tsx}"
    ],
    "sources": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "cache": true,
    "concurrency": 5,
    "failWithoutAssertions": true,
    "verbose": true,
    "compileEnhacements": false,
    "require": [
      "./test/config/babel-test-register.js"
    ],
    "babel": {
      "extensions": [
        "js",
        "jsx",
        "ts",
        "tsx"
      ]
    }
  },
  "scripts": {
    "compile": "run-p compile:*",
    "compile:dist": "tsc --module commonjs --outDir dist",
    "compile:es": "tsc --module es2015 --outDir es",
    "clean": "run-p clean:**",
    "clean:dist": "rimraf dist",
    "clean:es": "rimraf es",
    "lint": "eslint src/**/*.ts",
    "release:github": "git add . && git commit -am $npm_package_version --allow-empty && git tag $npm_package_version && git push && git push --tags",
    "release": "run-s clean compile test release:github",
    "test": "ava"
  }
}
